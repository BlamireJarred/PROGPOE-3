<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Claim System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body>
    <!-- Simple Header -->
    <header class="bg-primary text-white shadow-sm">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center py-3">
                <a class="h4 mb-0 text-white text-decoration-none" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-file-invoice me-2"></i>Claim System
                </a>

                <nav>
                    <a class="text-white text-decoration-none mx-3" asp-controller="Home" asp-action="LecturerDashboard">
                        <i class="fas fa-user me-1"></i>Lecturer
                    </a>
                    <a class="text-white text-decoration-none mx-3" asp-controller="Home" asp-action="ManagerDashboard">
                        <i class="fas fa-cog me-1"></i>Manager
                    </a>
                    <a class="text-white text-decoration-none mx-3" asp-controller="Home" asp-action="CoordinatorDashboard">
                        <i class="fas fa-user-tie me-1"></i>Coordinator
                    </a>
                    <a class="text-white text-decoration-none mx-3" asp-controller="Home" asp-action="HRDashboard">
                        <i class="fas fa-users me-1"></i>HR
                    </a>
                </nav>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="container my-4">
        @RenderBody()
    </main>

    <!-- Simple Footer -->
    <footer class="bg-light border-top mt-5">
        <div class="container py-3">
            <div class="text-center text-muted">
                <small>
                    &copy; 2024 Claim System.
                    <span class="mx-2">|</span>
                    Supported files: PDF, DOCX, XLSX, JPG, PNG (Max 5MB)
                </small>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Simple Script for Auto-dismiss Alerts -->
    <script>
        setTimeout(function() {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                const bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>