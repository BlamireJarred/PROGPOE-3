@model List<PROG6212_POE.Models.Lecturer>

@{
    ViewData["Title"] = "Lecturer Management";
}

<h2 class="mb-4">Lecturer Management</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<div class="card">
    <div class="card-header bg-primary text-white">
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="card-title mb-0">
                <i class="fas fa-user-tie me-2"></i>Lecturers
                <span class="badge bg-light text-dark ms-2">@Model.Count(l => l.IsActive) Active</span>
            </h5>
            <a asp-action="AddLecturer" class="btn btn-light btn-sm">
                <i class="fas fa-plus me-1"></i>Add Lecturer
            </a>
        </div>
    </div>
    <div class="card-body">
        @if (Model.Any(l => l.IsActive))
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Email</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var lecturer in Model.Where(l => l.IsActive))
                        {
                            <tr>
                                <td>@lecturer.Id</td>
                                <td>
                                    <a asp-action="LecturerDetails" asp-route-id="@lecturer.Id" class="text-decoration-none">
                                        <strong>@lecturer.FirstName</strong>
                                    </a>
                                </td>
                                <td>@lecturer.LastName</td>
                                <td>@lecturer.Email</td>
                                <td>
                                    <span class="badge bg-success">Active</span>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="LecturerDetails" asp-route-id="@lecturer.Id" class="btn btn-outline-primary">
                                            <i class="fas fa-eye"></i> View
                                        </a>
                                        <a asp-action="EditLecturer" asp-route-id="@lecturer.Id" class="btn btn-outline-secondary">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                <h5>No active lecturers found</h5>
                <p class="mb-0">Click "Add Lecturer" to create a new lecturer profile.</p>
            </div>
        }
    </div>
</div>

<div class="mt-4">
    <a asp-action="HRDashboard" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-1"></i>Back to HR Dashboard
    </a>
</div>