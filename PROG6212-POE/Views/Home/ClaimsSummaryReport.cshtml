@model PROG6212_POE.Services.ReportResult

@{
    ViewData["Title"] = "Claims Summary Report";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Claims Summary Report</h2>
    <button onclick="window.print()" class="btn btn-primary">
        <i class="fas fa-print me-2"></i>Print Report
    </button>
</div>

<!-- Report Header -->
<div class="card mb-4">
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <h4>@Model.Title</h4>
                <p class="text-muted mb-0">Generated on: @Model.GeneratedDate.ToString("f")</p>
            </div>
            <div class="col-md-6 text-end">
                <div class="row">
                    <div class="col-6">
                        <div class="border rounded p-2">
                            <h6 class="mb-1">Total Claims</h6>
                            <h4 class="text-primary mb-0">@Model.Summary.TotalClaims</h4>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="border rounded p-2">
                            <h6 class="mb-1">Total Amount</h6>
                            <h4 class="text-success mb-0">@Model.Summary.TotalAmount.ToString("C")</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Summary by Status -->
@if (Model.SummaryData.Any())
{
    <div class="row mb-4">
        @foreach (var summary in Model.SummaryData)
        {
            <div class="col-md-3 mb-3">
                <div class="card @GetStatusCardClass(summary.Category) text-white">
                    <div class="card-body text-center">
                        <h5 class="card-title">@summary.Category</h5>
                        <h2>@summary.Count</h2>
                        <p class="mb-0">@summary.TotalAmount.ToString("C")</p>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Detailed Breakdown -->
    <div class="card">
        <div class="card-header bg-light">
            <h5 class="card-title mb-0">Claims Breakdown by Status</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead class="table-dark">
                        <tr>
                            <th>Status</th>
                            <th>Number of Claims</th>
                            <th>Total Amount</th>
                            <th>Percentage</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var summary in Model.SummaryData)
                        {
                            <tr>
                                <td>
                                    <span class="badge @GetStatusBadgeClass(summary.Category)">
                                        @summary.Category
                                    </span>
                                </td>
                                <td>@summary.Count</td>
                                <td>@summary.TotalAmount.ToString("C")</td>
                                <td>
                                    @if (Model.Summary.TotalClaims > 0)
                                    {
                                        var percentage = (summary.Count * 100.0) / Model.Summary.TotalClaims;
                                        <text>@percentage.ToString("0.0")%</text>
                                    }
                                    else
                                    {
                                        <text>0%</text>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot class="table-secondary">
                        <tr>
                            <td class="fw-bold">Grand Total</td>
                            <td class="fw-bold">@Model.Summary.TotalClaims</td>
                            <td class="fw-bold">@Model.Summary.TotalAmount.ToString("C")</td>
                            <td class="fw-bold">100%</td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-info">
        <h5>No claims found</h5>
        <p class="mb-0">There are no claims matching the selected criteria.</p>
    </div>
}

<div class="mt-4">
    <a asp-action="GenerateReports" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-1"></i>Back to Reports
    </a>
</div>

<style>
    @@media print {
        .btn, .mt-4 {
            display: none !important;
        }

        .card {
            border: 1px solid #000 !important;
        }
    }
</style>

@functions {
    public string GetStatusCardClass(string status)
    {
        return status?.ToLower() switch
        {
            "approved" => "bg-success",
            "paid" => "bg-info",
            "pending" => "bg-warning",
            "rejected" => "bg-danger",
            _ => "bg-secondary"
        };
    }

    public string GetStatusBadgeClass(string status)
    {
        return status?.ToLower() switch
        {
            "approved" => "bg-success",
            "paid" => "bg-info",
            "pending" => "bg-warning",
            "rejected" => "bg-danger",
            _ => "bg-secondary"
        };
    }
}