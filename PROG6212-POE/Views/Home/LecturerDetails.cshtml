@model PROG6212_POE.Models.Lecturer

@{
    ViewData["Title"] = "Lecturer Details";
    var lecturerClaims = ViewBag.LecturerClaims as List<PROG6212_POE.Models.Claim> ?? new List<PROG6212_POE.Models.Claim>();
}

<h2 class="mb-4">Lecturer Details</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<div class="row">
    <!-- Lecturer Information -->
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="card-title mb-0">
                    <i class="fas fa-user-tie me-2"></i>Lecturer Information
                </h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">ID:</dt>
                    <dd class="col-sm-8">@Model.Id</dd>

                    <dt class="col-sm-4">First Name:</dt>
                    <dd class="col-sm-8">@Model.FirstName</dd>

                    <dt class="col-sm-4">Last Name:</dt>
                    <dd class="col-sm-8">@Model.LastName</dd>

                    <dt class="col-sm-4">Email:</dt>
                    <dd class="col-sm-8">@Model.Email</dd>

                    <dt class="col-sm-4">Status:</dt>
                    <dd class="col-sm-8">
                        <span class="badge @(Model.IsActive ? "bg-success" : "bg-danger")">
                            @(Model.IsActive ? "Active" : "Inactive")
                        </span>
                    </dd>
                </dl>
            </div>
        </div>
    </div>

    <!-- Claims History -->
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-warning">
                <h5 class="card-title mb-0">
                    <i class="fas fa-file-invoice-dollar me-2"></i>Claims History
                    <span class="badge bg-light text-dark ms-2">@lecturerClaims.Count</span>
                </h5>
            </div>
            <div class="card-body">
                @if (lecturerClaims.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-sm table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Contract</th>
                                    <th>Amount</th>
                                    <th>Status</th>
                                    <th>Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var claim in lecturerClaims)
                                {
                                    <tr>
                                        <td>@claim.Id</td>
                                        <td>@claim.ContractName</td>
                                        <td>@claim.TotalAmount.ToString("C")</td>
                                        <td>
                                            <span class="badge @GetStatusBadgeClass(claim.Status)">
                                                @claim.Status
                                            </span>
                                        </td>
                                        <td>@claim.SubmittedDate.ToString("MMM dd")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Claims Summary -->
                    <div class="row mt-3">
                        <div class="col-6">
                            <div class="card bg-light">
                                <div class="card-body text-center p-2">
                                    <h6 class="card-title mb-1">Total Claims</h6>
                                    <h5 class="mb-0">@lecturerClaims.Count</h5>
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="card bg-light">
                                <div class="card-body text-center p-2">
                                    <h6 class="card-title mb-1">Total Value</h6>
                                    <h5 class="mb-0">@lecturerClaims.Sum(c => c.TotalAmount).ToString("C")</h5>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <p class="text-muted">No claims submitted by this lecturer.</p>
                }
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="card mt-4">
            <div class="card-header">
                <h5 class="card-title mb-0">Actions</h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-action="EditLecturer" asp-route-id="@Model.Id" class="btn btn-primary">
                        <i class="fas fa-edit me-2"></i>Edit Lecturer
                    </a>
                    <a asp-action="LecturerManagement" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Back to List
                    </a>
                    @if (Model.IsActive)
                    {
                        <form asp-action="DeleteLecturer" method="post" class="d-grid">
                            <input type="hidden" name="id" value="@Model.Id" />
                            <button type="submit" class="btn btn-outline-danger"
                                    onclick="return confirm('Are you sure you want to deactivate this lecturer?')">
                                <i class="fas fa-user-slash me-2"></i>Deactivate Lecturer
                            </button>
                        </form>
                    }
                    else
                    {
                        <form asp-action="ActivateLecturer" method="post" class="d-grid">
                            <input type="hidden" name="id" value="@Model.Id" />
                            <button type="submit" class="btn btn-outline-success">
                                <i class="fas fa-user-check me-2"></i>Activate Lecturer
                            </button>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    public string GetStatusBadgeClass(string status)
    {
        return status?.ToLower() switch
        {
            "approved" or "paid" => "bg-success",
            "rejected" => "bg-danger",
            "pending" => "bg-warning",
            _ => "bg-secondary"
        };
    }
}