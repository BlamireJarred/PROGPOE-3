@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5 text-center">
    <h1 class="display-5 fw-bold text-primary">Contract Monthly Claim System</h1>
    <p class="lead text-muted">Submit, track, and manage your monthly contract claims with ease.</p>

    <div class="row mt-4">
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <i class="fas fa-file-invoice-dollar fa-3x text-primary mb-3"></i>
                    <h5>Submit Claims</h5>
                    <a asp-action="LecturerDashboard" class="btn btn-primary">Go to Dashboard</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <i class="fas fa-tasks fa-3x text-success mb-3"></i>
                    <h5>Manager Dashboard</h5>
                    <a asp-action="ManagerDashboard" class="btn btn-success">View Claims</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <i class="fas fa-user fa-3x text-info mb-3"></i>
                    <h5>Login</h5>
                    <a asp-action="Login" class="btn btn-info">Login Page</a>
                </div>
            </div>
        </div>
    </div>
</div>
