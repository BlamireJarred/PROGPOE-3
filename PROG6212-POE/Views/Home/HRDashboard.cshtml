@model PROG6212_POE.Controllers.HomeController.HRDashboardViewModel

@{
    ViewData["Title"] = "HR Dashboard";
}

<h2 class="mb-4">HR Dashboard</h2>

<!-- Statistics Cards -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h6 class="card-title">Total Lecturers</h6>
                        <h3>@Model.TotalLecturers</h3>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-users fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-warning text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h6 class="card-title">Pending Claims</h6>
                        <h3>@Model.PendingClaims</h3>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-clock fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-success text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h6 class="card-title">Approved Claims</h6>
                        <h3>@Model.ApprovedClaims</h3>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-check-circle fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-info text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h6 class="card-title">Monthly Payments</h6>
                        <h3>@Model.TotalPaymentsThisMonth.ToString("C")</h3>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-money-bill-wave fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3 mb-2">
                        <a asp-action="LecturerManagement" class="btn btn-outline-primary w-100">
                            Manage Lecturers
                        </a>
                    </div>
                    <div class="col-md-3 mb-2">
                        <a asp-action="GenerateReports" class="btn btn-outline-info w-100">
                            Generate Reports
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Recent Claims -->
<div class="card">
    <div class="card-header">
        <h5 class="card-title mb-0">Recent Claims</h5>
    </div>
    <div class="card-body">
        @if (Model.RecentClaims.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Lecturer</th>
                            <th>Contract</th>
                            <th>Amount</th>
                            <th>Status</th>
                            <th>Submitted</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var claim in Model.RecentClaims)
                        {
                            <tr>
                                <td>@claim.Id</td>
                                <td>@claim.LecturerName</td>
                                <td>@claim.ContractName</td>
                                <td>@claim.TotalAmount.ToString("C")</td>
                                <td>
                                    <span class="badge @GetStatusBadgeClass(claim.Status)">
                                        @claim.Status
                                    </span>
                                </td>
                                <td>@claim.SubmittedDate.ToString("MMM dd, yyyy")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p class="text-muted">No recent claims found.</p>
        }
    </div>
</div>

@functions {
    public string GetStatusBadgeClass(string status)
    {
        return status?.ToLower() switch
        {
            "approved" => "bg-success",
            "paid" => "bg-info",
            "rejected" => "bg-danger",
            "pending" => "bg-warning",
            _ => "bg-secondary"
        };
    }
}